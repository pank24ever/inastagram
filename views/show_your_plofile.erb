<div class="plofile_username_wrapper">
    <div class="plofile_username">
        <h2><%= @your_plofile['user_name'] %></h2>
    </div>

    <div class="plofile_detail">
        <div>
            <img src="/plofile_img/<%=@your_plofile['plofile_img']%>" style="height: 250px; width: 250px; border-radius: 50%;" class="img-thumbnail">
        </div>
        
        <div>
            <span>Posts</span>
            <li>
                <ul><a href="followed">Followed</a></ul>
                <ul><a href="following">Following</a></ul>
            </li>
        </div>
    </div>

    <h2>Name:<%= @your_plofile['name']%></h2>
    <h5><%= @your_plofile['plofile_contents'] %></h5>

    <div>
        <% @your_posts.each do |post| %>
            <img src="/images/<%= post['img']%>">
        <% end %>
    </div>
</div>
